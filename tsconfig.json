{
  "include": ["src/**/*"],
  "exclude": [],
  "compilerOptions": {
    "skipLibCheck": true,
    "target": "ES2021",
    "module": "commonjs",
    "lib": ["ES2021", "DOM"],
    "allowJs": true,
    "incremental": true,
    "checkJs": true,
    "sourceMap": true,
    "outDir": "out",
    "rootDir": "src",
    "strict": true,
    "useUnknownInCatchVariables": false,
    "esModuleInterop": true
  }
}
